{
    "manifest_version": 3,
    "name": "Meet Chat Logger Pro",
    "version": "1.0.0",
    "description": "即時監聽並儲存 Google Meet 聊天記錄，支援匯出 Markdown/CSV 至本機或 Google Drive",
    "permissions": [
        "storage",
        "identity",
        "activeTab",
        "scripting",
        "downloads"
    ],
    "host_permissions": [
        "https://meet.google.com/*",
        "https://www.googleapis.com/*"
    ],
    "oauth2": {
        "client_id": "232960536521-m7sqk8dslnrvfilfg5vplmhj2hva3jsu.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/drive.file",
            "https://www.googleapis.com/auth/userinfo.email"
        ]
    },
    "background": {
        "service_worker": "src/background/index.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://meet.google.com/*"
            ],
            "js": [
                "src/content/index.ts"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "src/popup/index.html",
        "default_icon": {
            "16": "public/icons/icon16.png",
            "48": "public/icons/icon48.png",
            "128": "public/icons/icon128.png"
        }
    },
    "icons": {
        "16": "public/icons/icon16.png",
        "48": "public/icons/icon48.png",
        "128": "public/icons/icon128.png"
    }
}